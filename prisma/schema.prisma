// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  image_src    String
  title        String
  desc         String
  published_at String?
  skillIds     String[]
}

model Skill {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  image_path   String
  experience   Job? @relation(fields: [experienceId], references: [id])
  experienceId String? 
}

model Job {
  id        String  @id @map("_id")
  from_date String
  to_date   String
  title     String
  desc      String
  skills    Skill[]
}
